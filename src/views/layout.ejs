              </li>
              <% } %>
                <li class="nav__item">
                  <form id="logout" action="/logout" method="POST">
                    <a class="hover:text-green-800 nav__link active-link" style="color: #fe5f1e;" onclick="document.getElementById('logout').submit()"
                      href="#">Logout</a>
                  </form>
                </li>
                <% } else { %>
                    <li class="nav__item">
                      <a style="color: #fe5f1e;" class="hover:text-green-800 nav__link active-link" href="/register">Register</a>
                    </li>
                    <li class="nav__item">
                      <a style="color: #fe5f1e;" class="hover:text-green-800 nav__link active-link" href="/login">Login</a>
                    </li>
                    <% } %>
                      <li class="nav__cart nav__item">
                        <a href="/cart" class="shopping__cart nav__link active-link rounded-full flex items-center">
                          <span id="cartCounter" class="font-bold">
                            <%= session.cart ? session.cart.totalQty : '' %>
                          </span>
                          <img class="nav__link active-link" src="/img/cart1.png" alt="cart.png" />
                        </a>
                      </li>

                      <li><i class="bx bx-moon change-theme" id="theme-button">Theme</i></li>
        </ul>
      </div>

      <div class="nav__toggle" id="nav-toggle">
        <i class="bx bx-menu"></i>
      </div>
    </nav>
