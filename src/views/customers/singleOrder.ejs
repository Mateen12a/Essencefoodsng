<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      .preloader {
      position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000000;
}

.preloader img {
  width: 20rem;
  height: 20rem;
}

    </style>
  </head>
  <link
    href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
    rel="stylesheet"
  />

  <body>
    <!--preloader-->
    <div class="preloader">
      <img src="/img/preloader.gif" alt="" />
    </div>
    <!-- Single Order -->
    <section class="section status">
      <div class="container mx-auto text-black h-screen">
        <div class="status-box w-full md:w-4/5 lg:w-2/3 mx-auto">
          <div
            class="flex flex-col sm:flex-row items-center justify-between mb-12"
          >
            <h1 class="text-xl font-bold mb-4 sm:mb-0">
              Track delivery status
            </h1>
            <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs">
              <%= order._id %>
            </h6>
            <input
              id="hiddenInput"
              type="hidden"
              value="<%= JSON.stringify(order) %>"
            />
          </div>
          <ul>
            <li
              class="status_line text-sm md:text-xl pb-16"
              data-status="order_placed"
            >
              <span>Order Placed</span>
            </li>
            <li
              class="status_line text-sm md:text-xl pb-16"
              data-status="confirmed"
            >
              <span>Order confirmation</span>
            </li>
            <li
              class="status_line text-sm md:text-xl pb-16"
              data-status="prepared"
            >
              <span>Preparation</span>
            </li>
            <li
              class="status_line text-sm md:text-xl pb-16"
              data-status="delivered"
            >
              <span>Out for delivery </span>
            </li>
            <li class="status_line text-sm md:text-xl" data-status="completed">
              <span>Complete</span>
            </li>
          </ul>
        </div>
      </div>
    </section>
    <script>
      const preloader = document.querySelector(".preloader");

window.addEventListener("load", () => {
  setTimeout(() => {
    preloader.style.display = "none";
  }, 2000);
});
    </script>
  </body>
</html>
