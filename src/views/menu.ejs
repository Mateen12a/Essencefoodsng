   <h1 class="text-center font-black grid-cols-3 comment">Comments From Our Valued Customers</h1>
   <div class="container comment">
       <div class="flex w-90 justify-between border rounded-md">
           <div id="commentbox" class="grid-cols-3 ">
               <div class="d-flex flex-column comment-section border p-3" style="overflow-y: scroll; height: 310px;">
                   <div class="grid-cols-4 gap-3 items-center comment">
                    <% comments.forEach(function(comment) { %> 
                       <div class=" d-flex grid-cols-2 flex-row user-info">
                           <div class="d-flex flex-column justify-content-start ml-2">
                           <span class="d-block font-bold name commentname"><%= comment.name %></span>
                           <span class="text-sm text-gray-400 font-medium commentday">Shared Comment on - <%= comment.createdAt.toDateString() %> </span>
                           </div>
                       </div>
                       <div class="text-gray-600 mt-2 grid-cols-2">
                           <p class="comment-text commenttext"><%= comment.content %></p>
                       </div> <% })%>
                   </div>
                   </div>
                   <div class="bg-light p-2">
                       <div class="d-flex flex-row align-items-start">
